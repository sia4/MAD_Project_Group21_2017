<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".InsertGroupActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/insert_group_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">

        <android.support.v7.widget.Toolbar
            android:id="@+id/insert_group_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:theme="@style/ToolbarTheme"
            app:popupTheme="@style/PopupTheme"/>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ProgressBar
                android:id="@+id/progress_bar_insertgroups"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="60dp"
                android:layout_centerHorizontal="true"
                android:indeterminate="false"
                android:visibility="invisible"/>

            <LinearLayout
                android:id="@+id/llayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_margin"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ImageG"
                        android:src="@drawable/camera_icon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"/>
                </RelativeLayout>
                <Button
                    android:id="@+id/load"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Load image"
                    android:layout_gravity="center"
                    />
                <EditText
                    android:id="@+id/GroupName"
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_weight="0.5"
                    android:hint="Add Name..."
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/GroupDescription"
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:hint="Add Description..."
                    android:text="Hello I'm on Alla Romana" />

                <Spinner
                    android:id="@+id/GroupCurrency"
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_weight="0.5"
                    android:entries="@array/currencies" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/User1"
                        android:layout_width="wrap_content"
                        android:layout_height="60sp"
                        android:layout_gravity="left"
                        android:layout_weight="10"
                        android:hint="Add User..." />

                    <Button
                        android:id="@+id/Adduser1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_weight="0.2"
                        android:text="+" />

                </LinearLayout>

                <!--
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60sp"
                        android:text="+"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/inviteNewUser"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:elevation="1dp"
                        android:text="Invite a Friend"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60sp"
                        android:layout_gravity="end"
                        android:text=">"
                        android:textSize="40sp" />
                </LinearLayout>-->


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/usersToAdd"
                    android:layout_width="match_parent"
                    android:layout_height="314dp"
                    android:orientation="vertical"
                    android:scrollbars="vertical" />

                <!--<Button
                    android:id="@+id/CreateGroup"
                    android:text="Create Group"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/activity_margin"/>-->
            </LinearLayout>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
