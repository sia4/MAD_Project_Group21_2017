<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.polito.mad.mad_app.GroupInfoActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/user_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">

        <android.support.v7.widget.Toolbar
            android:id="@+id/info_user_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:theme="@style/ToolbarTheme"
            app:popupTheme="@style/PopupTheme"/>

    </android.support.design.widget.AppBarLayout>

    <!--<include layout="@layout/content_expense_info" />-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp">
        <ProgressBar
            android:id="@+id/progress_bar_user_info"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="60dp"
            android:layout_centerHorizontal="true"
            android:indeterminate="false"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/activity_margin"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/im_u"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:gravity="center_vertical" />

                <Button
                    android:id="@+id/changePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:text="Modify"
                    android:textColor="@color/colorAccent"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/name_u"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="Name"
                    android:textAlignment="gravity"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/name_u_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textAlignment="gravity"
                    android:textSize="30sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/surname_u"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="16sp"
                    android:layout_marginRight="16sp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:hint="Surname"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/surname_u_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="16sp"
                    android:layout_marginRight="16sp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <View
                    android:id="@+id/view"
                    style="@style/Divider"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="20sp"
                    android:layout_marginLeft="16sp"
                    android:layout_marginRight="16sp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="Email:"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/email_u"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="16sp"
                    android:layout_marginRight="16sp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:hint="Email"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llayout_user_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <!--<Button
            android:id="@+id/sendVerificationEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Send Again confirmation email"/>
         <View style="@style/Divider" />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="20sp"
           android:layout_marginLeft="16sp"
           android:layout_marginRight="16sp"
           android:layout_marginTop="5dp"
           android:text="Username"
           android:textSize="13sp" />
       <TextView
           android:id="@+id/username_u"
           android:layout_width="match_parent"
           android:layout_height="30sp"
           android:layout_marginBottom="5dp"
           android:layout_marginLeft="16sp"
           android:layout_marginRight="16sp"
           android:layout_marginTop="5dp"
           android:textSize="20sp" />
       <View style="@style/Divider" /> LO TOGLIAMO PER IL MOMENTO-->

        </LinearLayout>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>