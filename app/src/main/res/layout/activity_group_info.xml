<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.polito.mad.mad_app.GroupInfoActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/insert_group_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">

        <android.support.v7.widget.Toolbar
            android:id="@+id/info_group_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:theme="@style/ToolbarTheme"
            app:popupTheme="@style/PopupTheme"/>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_expense_info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/im_g"
                android:layout_width="100dp"
                android:layout_height="87dp"
                android:gravity="left" />

            <TextView
                android:id="@+id/name_g"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="gravity"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/name_g_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center"
                android:textAlignment="gravity"
                android:textSize="30sp"
                android:visibility="invisible" />

        </LinearLayout>

        <View style="@style/Divider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:layout_marginTop="5dp"
            android:text="Description:"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/de_g_ed"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/de_g"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:layout_marginTop="5dp"
            android:textSize="20sp" />

        <View style="@style/Divider" />

        <View style="@style/Divider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:layout_marginTop="5dp"
            android:text="Users:"
            android:textSize="13sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/users"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:orientation="vertical"
            android:scrollbars="vertical" />

        <Button
            android:id="@+id/addUserInExistingGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Add new user"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:layout_marginTop="5dp"
            android:text="Currencies:"
            android:textSize="13sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/currencies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:orientation="vertical"
            android:scrollbars="vertical" />
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
