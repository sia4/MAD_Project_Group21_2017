<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_expense"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:focusable="true"
    android:clickable="true"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:elevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/first_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/data_ex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="left"
                        android:text="Data"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/name_ex"
                        android:layout_width="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Title"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="26sp" />

                    <TextView
                        android:id="@+id/money_ex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="right"
                        android:text="Money"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.7">

                    <ImageView
                        android:id="@+id/imCat"
                        android:layout_width="85dp"
                        android:layout_height="85dp" />
                </LinearLayout>

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/second_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <Button
                    android:id="@+id/exDeny"
                    android:layout_width="40sp"
                    android:layout_height="35sp"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    android:text="Deny"
                    android:textColor="#CD6858"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/exContested"
                    android:layout_width="90sp"
                    android:layout_height="35sp"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    android:clickable="false"
                    android:visibility="gone"
                    android:text="Contested"
                    android:textColor="#CD6858"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/arrow_down"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentRight="true"
                    />
                <ImageView
                    android:id="@+id/arrow_up"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/info"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
                      <LinearLayout
                          android:layout_weight="0.3"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/descrip_ex"
                            android:layout_width="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_height="24sp"
                            android:gravity="right"
                            android:textSize="20sp"
                            android:text="Descrizione"
                            />
                        <TextView
                            android:id="@+id/algorithm_ex"
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="24sp"
                            android:gravity="right"
                            android:textSize="20sp"
                            android:text="Algoritmo"
                            />
                          <TextView
                              android:id="@+id/your_slice"
                              android:layout_width="wrap_content"
                              android:layout_margin="5dp"
                              android:layout_height="24sp"
                              android:gravity="left"
                              android:textSize="20sp"
                              android:text="You Slice:"
                              />
                          <TextView
                              android:id="@+id/creator_ex"
                              android:layout_margin="5dp"
                              android:layout_width="wrap_content"
                              android:layout_height="24sp"
                              android:gravity="left"
                              android:textSize="20sp"
                              android:text="You Slice:"
                              />
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="0.7"
                            android:layout_height="match_parent"
                        android:weightSum="1">

                        <ImageView
                            android:id="@+id/iPhoto"
                            android:layout_width="65dp"
                            android:layout_gravity="center"
                            android:layout_height="65dp"
                            android:scaleType="centerCrop"
                            android:layout_weight="0.63" />
                    </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
